<section class="resume-section">
  <div class="resume-section-content">
    <h1 class="mb-0">
      Login in
    </h1>
    <div class="subheading mb-5">
      Digite o token que recebeu no e-mail para
      <a href="#">Entrar</a>

      <%= simple_form_for :user, url: session_path, method: :post do |f| %>
        <%= f.input :token %><br />
        <%= f.button :submit, 'Entrar', class: 'btn btn-secondary' %>
      <% end %>
    </div>
  </div>
</section>